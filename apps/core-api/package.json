{
  "name": "core-api",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "migrate:make": "knex migrate:make --knexfile src/knexfile.ts",
    "migrate:latest": "knex migrate:latest --knexfile src/knexfile.ts",
    "migrate:rollback": "knex migrate:rollback --knexfile src/knexfile.ts",
    "ts:check": "tsc --noEmit",
    "predev": "docker-compose up -d || docker compose up -d; sleep 2",
    "dev": "NODE_ENV=development tsx watch --clear-screen=false src/index.ts | pino-pretty | knex migrate:latest --knexfile src/knexfile.ts",
    "build": "rimraf dist && tsc",
    "start": "tsx src/index.ts | knex migrate:latest --knexfile src/knexfile.ts",
    "format": "prettier --write 'src/**/*.{ts,js,json}' 'tests/**/*.{ts,js,json}'",
    "test": "DEBUG=*,-express:*,TZ=UTC jest",
    "prepare": "husky install"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^6.3.1",
    "@types/knex": "^0.16.1",
    "@types/node": "^20.11.20",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.2",
    "envalid": "^8.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "knex-migrate": "^1.7.4",
    "pg": "^8.11.3",
    "pino-http": "^9.0.0",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.8",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "**/*.{ts,js,json}": ["npm run lint", "npm run format"],
    "src/**/*.{ts,js,json}": "npm run format",
    "tests/**/*.{ts,js,json}": "npm run format"
  }
}
